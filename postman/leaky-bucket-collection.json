    {
      "listen": "test",
      "script": {
        "type": "text/javascript",
        "exec": [
          "// Extract and save JWT token after login or registration",
          "const jsonData = pm.response.json();",
          "if (jsonData && jsonData.data) {",
          "    if (jsonData.data.login && jsonData.data.login.token) {",
          "        pm.environment.set(\"token\", jsonData.data.login.token);",
          "        console.log(\"Token saved from login: \" + jsonData.data.login.token);",
          "    } else if (jsonData.data.register && jsonData.data.register.token) {",
          "        pm.environment.set(\"token\", jsonData.data.register.token);",
          "        console.log(\"Token saved from registration: \" + jsonData.data.register.token);",
          "    }",
          "}"
        ]
      }
